<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expenses_Activity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Travel Expenses"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Expenses_userid"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="route"
                android:id="@+id/route" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="date"
                android:id="@+id/date1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="distnace"
                android:id="@+id/distnace"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fare"
                android:id="@+id/fare"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="allowance"
                android:id="@+id/allowance"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="others"
                android:id="@+id/other"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/submit_expenses"
                android:background="@color/login_button_background"
                android:textColor="@color/userdetails"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20sp"/>


        </LinearLayout>




    </android.support.v7.widget.CardView>





</LinearLayout>