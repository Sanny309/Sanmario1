<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".route_list">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/android">

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="@drawable/gradientbackground">
            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="ROUTE LIST"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_gravity="center">
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/workarea_id"
                    android:id="@+id/route_workarea_id"/>

                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/login_button_background"
                    android:text="submit"
                    android:textColor="@color/userdetails"
                    android:textStyle="bold"
                    android:id="@+id/submit_route123"/>
                <Button
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:background="@color/login_button_background"
                    android:textColor="@color/userdetails"
                    android:layout_marginTop="10dp"
                    android:id="@+id/back3"/>

                <ListView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Route_list123">

                </ListView>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>