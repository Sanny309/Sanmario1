<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_main_Activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="499dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/android"
            android:orientation="vertical">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:src="@drawable/normal" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="-102dp"
                android:text="Name:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold"
                android:layout_marginTop="-28dp"
                android:id="@+id/fullname302"/>

            <TextView

                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="0dp"
                android:text="User ID:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-25dp"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold"
                android:id="@+id/id302"/>
            <TextView

                android:layout_width="84dp"
                android:layout_height="25dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="0dp"
                android:text="Mobile:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:layout_marginLeft="180dp"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="0dp"
                android:text="Work id:"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/workarea302"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-25dp"
                android:textColor="#fff"
                android:textSize="21sp"
                android:textStyle="bold" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Doctor List"
                    android:id="@+id/add_doctor"/>
                <Button
                    android:id="@+id/doctor_list1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Expenses"
                    android:layout_marginTop="-50dp" />


                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-50dp"
                    android:text="Report Stockist"
                    android:id="@+id/doctor_area_list"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ORDER LIST"
                    android:id="@+id/order_list"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-47dp"
                    android:text="Order"
                    android:id="@+id/area_list1"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-50dp"
                    android:text="Call report"
                    android:id="@+id/routes_list123"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Chemist report"
                    android:id="@+id/your_location"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-50dp"
                    android:text="DOCTOR ORDER"
                    android:id="@+id/doctor_order_list"/>

                <Button
                    android:id="@+id/call_report"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-50dp"
                    android:text="call report" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="LOGOUT"
                    android:background="@color/login_button_background"
                    android:textColorHint="@color/userdetails"
                    android:layout_marginTop="20dp"
                    android:id="@+id/LOGOUT2"/>




            </LinearLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>
</LinearLayout>